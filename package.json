{
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf build .nyc_output coverage",
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "prepare": "npm run clean && npm run build",
    "lint": "xo src/**/*.ts test/**/*.js",
    "lint:fix": "npm run lint -- --fix",
    "tap": "tap --no-coverage",
    "tap:coverage": "NODE_OPTIONS=\"--experimental-loader @istanbuljs/esm-loader-hook\" tap",
    "tap:coverage-report": "npm run tap:coverage -- --coverage-report=html",
    "test": "npm run lint && npm run tap:coverage"
  },
  "author": "Saeed M Rad",
  "license": "MIT",
  "engines": {
    "node": ">=12.17"
  },
  "devDependencies": {
    "@istanbuljs/esm-loader-hook": "^0.1.2",
    "@types/node": "^15.0.2",
    "@types/tap": "^15.0.1",
    "rimraf": "^3.0.2",
    "tap": "^15.0.6",
    "typescript": "^4.2.4",
    "xo": "^0.39.1"
  }
}
