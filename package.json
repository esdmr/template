{
  "private": true,
  "type": "module",
  "imports": {
    "#src/*": "./build/*",
    "#test-util/*": "./build/test/test-util/*"
  },
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "clean": "rimraf build .nyc_output coverage",
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "prepare": "npm run clean && npm run build",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "test": "tap --no-coverage",
    "test:coverage": "NODE_OPTIONS=\"--no-warnings --experimental-loader @istanbuljs/esm-loader-hook\" tap",
    "test:coverage-html": "npm run test:coverage -- --coverage-report=html",
    "test:coverage-lcov": "npm run test:coverage -- --coverage-report=lcovonly"
  },
  "author": "Saeed M Rad",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=6.9.0"
  },
  "devDependencies": {
    "@istanbuljs/esm-loader-hook": "0.1.2",
    "@types/node": "15.0.1",
    "@types/tap": "15.0.5",
    "rimraf": "3.0.2",
    "tap": "15.0.9",
    "typescript": "4.3.5",
    "xo": "0.42.0"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "15.0.1"
    }
  }
}
